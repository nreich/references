<h1>Search references:</h1>
<p>
	<%= form_tag citations_path, :method => 'get' do%>
    Title/Abstract Search: <%= text_field_tag :search, params[:search] %>
    <%= hidden_field_tag :search_method, "title_or_abstract"%>
    <%= submit_tag "Search", :name => nil %>
	<% end %>
</p>
<p>
	<%= form_tag citations_path, :method => 'get' do%>
    Author Search: <%= text_field_tag :search, params[:search] %>
    <%= hidden_field_tag :search_method, "author"%>
    <%= submit_tag "Search", :name => nil %>
	<% end %>
</p>
